$colorPrimaryDark        = $palette.purpleDark
$colorSecondaryRed       = $palette.red
$colorSecondaryOrange    = $palette.orange
$colorSecondaryYellow    = $palette.yellow
$colorSecondaryBlueLight = $palette.blueLight
$colorSecondaryBlue      = $palette.blue
$colorSecondaryBlueDark  = $palette.blueDark
$colorSecondaryGreen     = $palette.green


//
// Metrics
// -----------------------------------------------------------------------------

//- Sizing by increments
// KS reset
ks-rem-base = 16px
$baseGrid = 4px
$sizing = {
  xs: $baseGrid * 1 // 4
  sm: $baseGrid * 2 // 8
  md: $baseGrid * 3 // 12
  lg: $baseGrid * 4 // 16
  xl: $baseGrid * 5 // 20
}

//
// Fonts
// -----------------------------------------------------------------------------

//- Font
$baseFontFamily = 'Helvetica Neue', Helvetica, Arial, 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif
$headingsFontFamily = $baseFontFamily
$controlsFontFamily = $baseFontFamily
$owlColor = $colorGrayDarker
$colorLinkHover = $colorPrimary
$colorLink = $colorPrimaryDark

// Type
$baseFontSize = 14
$baseSize  = 14px
$smallFontSize = 10
$baseLineHeight = 1.5
$baseLine = $baseFontSize * $baseLineHeight
$baseLineInEms = $baseLine / $baseFontSize
$buttonsSmallFontSize = $baseFontSize - 3px // 11px

// Heading
$headingSize = {
  h1: $baseFontSize + 22px // 36px
  h2: $baseFontSize + 16px // 30px
  h3: $baseFontSize + 10px // 24px
  h4: $baseFontSize + 4px // 18px
  h5: $baseFontSize + 0px // 14px
  h6: $baseFontSize - 2px // 12px
}

// Util
$em = $baseFontSize  // outputting ems, e.g. 14/@em

// Forms
$fieldsBottom = 14

//
// Config
// -----------------------------------------------------------------------------

$owlBg = #E6EBF0 //old
// background color gradient

$primaryIconBg = rgba(255,255,255,.80)
// file server URL
$fileServerURL = 'src/'
// Extending
$borderBox
  box-sizing: border-box
//Tip
$tipBg = rgba($palette.grayDarker, .7)
$tipRadius = $sizing.xs -1px
